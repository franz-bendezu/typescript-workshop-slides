{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}